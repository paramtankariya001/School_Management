@{
    ViewData["Title"] = "Dashboard Overview";
}

<div class="row">
    <div class="col-md-12 mb-4">
        <h2 class="fw-bold">Welcome back, Administrator!</h2>
        <p class="text-muted">Here's what's happening in your school today.</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-gradient-primary shadow-sm border-0 dashboard-card">
            <div class="card-body py-4 position-relative">
                <h6 class="text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">Total Students</h6>
                <h2 class="mb-0 fw-bold">1,452</h2>
                <div class="mt-2 small"><i class="fas fa-arrow-up me-1"></i> 12% increase</div>
                <i class="fas fa-user-graduate stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-gradient-success shadow-sm border-0 dashboard-card">
            <div class="card-body py-4 position-relative">
                <h6 class="text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">Active Teachers</h6>
                <h2 class="mb-0 fw-bold">82</h2>
                <div class="mt-2 small"><i class="fas fa-check me-1"></i> All present today</div>
                <i class="fas fa-chalkboard-teacher stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-gradient-info shadow-sm border-0 dashboard-card">
            <div class="card-body py-4 position-relative">
                <h6 class="text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">Library Books</h6>
                <h2 class="mb-0 fw-bold">12,450</h2>
                <div class="mt-2 small"><i class="fas fa-book me-1"></i> 45 new arrivals</div>
                <i class="fas fa-book-open stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-gradient-warning shadow-sm border-0 dashboard-card">
            <div class="card-body py-4 text-white position-relative">
                <h6 class="text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">Total Revenue</h6>
                <h2 class="mb-0 fw-bold">$54,230</h2>
                <div class="mt-2 small"><i class="fas fa-chart-line me-1"></i> Target: 92%</div>
                <i class="fas fa-wallet stat-icon"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Activity Feed -->
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Recent Activities</h5>
                <button class="btn btn-sm btn-light text-primary fw-bold">View All</button>
            </div>
            <div class="card-body p-4">
                <div class="activity-item">
                    <p class="mb-1"><span class="fw-bold">New Student Enrollment:</span> Alice Thompson joined Class 10-A.</p>
                    <small class="text-muted">10 minutes ago</small>
                </div>
                <div class="activity-item" style="border-left-color: #28a745;">
                    <p class="mb-1"><span class="fw-bold text-success">Fee Collection:</span> Payment of $500 received from David Miller.</p>
                    <small class="text-muted">45 minutes ago</small>
                </div>
                <div class="activity-item" style="border-left-color: #ffc107;">
                    <p class="mb-1"><span class="fw-bold text-warning">Exam Reminder:</span> Physics Mid-term for Grade 11 starts tomorrow.</p>
                    <small class="text-muted">2 hours ago</small>
                </div>
                <div class="activity-item" style="border-left-color: #17a2b8;">
                    <p class="mb-1"><span class="fw-bold text-info">System Update:</span> Attendance reports for January generated.</p>
                    <small class="text-muted">Yesterday at 5:30 PM</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Sidebar -->
    <div class="col-lg-4">
        <!-- Announcements -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-4 text-center card-gradient-info rounded shadow">
                <i class="fas fa-bullhorn fa-3x mb-3 opacity-50"></i>
                <h5 class="fw-bold">Announcement</h5>
                <p class="mb-3 small">The school premises will remain closed on Friday for the annual maintenance work.</p>
                <button class="btn btn-sm btn-light text-info fw-bold px-4">Read Details</button>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h5 class="mb-0 fw-bold">Quick Actions</h5>
            </div>
            <div class="card-body p-4">
                <div class="d-grid gap-3">
                    <a asp-controller="Students" asp-action="Add" class="btn btn-outline-primary text-start p-3 rounded shadow-sm">
                        <i class="fas fa-user-plus me-3"></i> Add New Student
                    </a>
                    <a asp-controller="Fees" asp-action="Collect" class="btn btn-outline-success text-start p-3 rounded shadow-sm">
                        <i class="fas fa-dollar-sign me-3"></i> Collect Payment
                    </a>
                    <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-info text-start p-3 rounded shadow-sm">
                        <i class="fas fa-file-invoice me-3"></i> Generate Report
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
