@model IEnumerable<Project.Models.Student>
@{
    ViewData["Title"] = "My Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0">My Students</h2>
        <p class="text-muted small mb-0">View all students in your assigned classes</p>
    </div>
</div>

<div class="table-container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Student</th>
                <th>Class</th>
                <th>Roll No</th>
                <th>Attendance</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var student in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-3">
                                <div class="user-avatar bg-light text-primary fw-bold">
                                    @(student.Name?.FirstOrDefault().ToString().ToUpper() ?? "S")
                                </div>
                                <div>
                                    <div class="fw-bold">@student.Name</div>
                                    <div class="text-muted small">@student.Email</div>
                                </div>
                            </div>
                        </td>
                        <td>@student.Class</td>
                        <td><span class="fw-semibold">@student.RollNo</span></td>
                        <td>
                            <div class="progress" style="height: 6px; width: 100px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small class="text-muted">85%</small>
                        </td>
                        <td class="text-end">
                            <div class="d-flex justify-content-end gap-2">
                                <button class="btn-action" title="Mark Attendance">
                                    <i class="fas fa-calendar-check text-success"></i>
                                </button>
                                <button class="btn-action" title="Record Grades">
                                    <i class="fas fa-file-invoice text-primary"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center py-5 text-muted">
                        <i class="fas fa-users-slash fa-3x mb-3 opacity-25"></i>
                        <p>No student records assigned to you.</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
