<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC School Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo-circle">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <span class="logo-text">ABC School</span>
        </div>
        <div class="sidebar-menu">
            @if (User.IsInRole("Student"))
            {
                <a asp-controller="StudentPortal" asp-action="Profile" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "StudentPortal" && ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")">
                    <i class="fas fa-id-card"></i>
                    <span>My Profile</span>
                </a>
                <a asp-controller="StudentPortal" asp-action="Fees" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "StudentPortal" && ViewContext.RouteData.Values["Action"]?.ToString() == "Fees" ? "active" : "")">
                    <i class="fas fa-receipt"></i>
                    <span>My Fees</span>
                </a>
                <a asp-controller="Account" asp-action="Logout" class="sidebar-link text-danger mt-auto">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            }
            else if (User.IsInRole("Teacher"))
            {
                <a asp-controller="TeacherPortal" asp-action="Profile" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "TeacherPortal" && ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")">
                    <i class="fas fa-user-tie"></i>
                    <span>My Profile</span>
                </a>
                <a asp-controller="TeacherPortal" asp-action="Students" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "TeacherPortal" && ViewContext.RouteData.Values["Action"]?.ToString() == "Students" ? "active" : "")">
                    <i class="fas fa-user-graduate"></i>
                    <span>My Students</span>
                </a>
                <a asp-controller="Account" asp-action="Logout" class="sidebar-link text-danger mt-auto">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            }
            else
            {
                <a asp-controller="Home" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
                <a asp-controller="Students" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Students" ? "active" : "")">
                    <i class="fas fa-user-graduate"></i>
                    <span>Students</span>
                </a>
                <a asp-controller="Teachers" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Teachers" ? "active" : "")">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span>Teachers</span>
                </a>
                <a asp-controller="Classes" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Classes" ? "active" : "")">
                    <i class="fas fa-school"></i>
                    <span>Classes</span>
                </a>
                <a asp-controller="Fees" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Fees" ? "active" : "")">
                    <i class="fas fa-money-bill-wave"></i>
                    <span>Fees</span>
                </a>
                <a asp-controller="Reports" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")">
                    <i class="fas fa-chart-pie"></i>
                    <span>Reports</span>
                </a>
                <a asp-controller="Account" asp-action="StudentLogin" class="sidebar-link mt-auto">
                    <i class="fas fa-user-graduate"></i>
                    <span>Student Login</span>
                </a>
                <a asp-controller="Account" asp-action="TeacherLogin" class="sidebar-link">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span>Teacher Login</span>
                </a>
            }
        </div>
    </div>

    <div class="main-content">
        <div class="top-bar">
            <h4>@ViewData["Title"]</h4>
            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="user-profile">
                    <div class="user-avatar text-white">
                        <i class="fas fa-user"></i>
                    </div>
                    <span class="fw-semibold d-none d-md-inline">Admin</span>
                    <i class="fas fa-chevron-down ms-1 text-muted small"></i>
                </div>
            </div>
        </div>
        <div class="content-wrapper">
            <main role="main">
                @RenderBody()
            </main>
        </div>
        <footer>
            <div class="container">
                &copy; 2026 - ABC School Management - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
