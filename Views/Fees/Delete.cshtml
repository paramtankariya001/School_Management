@model Project.Models.FeeRecord
@{
    ViewData["Title"] = "Delete Fee Record";
}

<div class="row mb-4">
    <div class="col-md-12 text-center mt-5">
        <i class="fas fa-exclamation-circle text-danger fa-4x mb-4"></i>
        <h2 class="fw-bold">Delete Fee Record?</h2>
        <p class="text-muted">You are about to delete the fee record for <strong>@Model.StudentName</strong> of amount <strong>$@Model.Amount</strong>.</p>
        
        <div class="mt-4">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 me-3">Delete Confirmation</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">Cancel</a>
            </form>
        </div>
    </div>
</div>
