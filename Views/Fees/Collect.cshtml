@model Project.Models.FeeRecord
@{
    ViewData["Title"] = "Collect Student Fee";
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Fees</a></li>
                <li class="breadcrumb-item active" aria-current="page">Collect Fee</li>
            </ol>
        </nav>
        <h2>Collect Student Fee</h2>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="Collect" method="post">
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="StudentName" class="form-label">Search Student</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-search"></i></span>
                                <input asp-for="StudentName" class="form-control" placeholder="Enter Student Name or ID" required />
                            </div>
                            <span asp-validation-for="StudentName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FeeType" class="form-label">Fee Category</label>
                            <select asp-for="FeeType" class="form-select" required>
                                <option value="">Select Category</option>
                                <option value="Tuition">Tuition Fee</option>
                                <option value="Exam">Examination Fee</option>
                                <option value="Transport">Transport Fee</option>
                                <option value="Hostel">Hostel Fee</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label">Amount Paid ($)</label>
                            <input asp-for="Amount" type="number" class="form-control" placeholder="0.00" step="0.01" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentMode" class="form-label">Payment Mode</label>
                            <select asp-for="PaymentMode" class="form-select" required>
                                <option value="Cash">Cash</option>
                                <option value="Card">Credit/Debit Card</option>
                                <option value="Transfer">Bank Transfer</option>
                                <option value="Cheque">Cheque</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentDate" class="form-label">Payment Date</label>
                            <input asp-for="PaymentDate" type="date" class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Remarks" class="form-label">Remarks</label>
                        <textarea asp-for="Remarks" class="form-control" rows="2" placeholder="Optional notes..."></textarea>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success px-5 fw-bold"><i class="fas fa-receipt me-2"></i>Generate Receipt</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
