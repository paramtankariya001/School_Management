@model Project.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Students</a></li>
                <li class="breadcrumb-item active" aria-current="page">Student Details</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-center p-4 h-100">
            <div class="mb-4">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px; font-size: 3rem;">
                    <i class="fas fa-user-graduate"></i>
                </div>
            </div>
            <h4>@Model.Name</h4>
            <p class="text-muted">ID: @Model.Id | Roll No: @Model.RollNo</p>
            <div class="mt-3">
                <span class="badge bg-success px-3 py-2">Active</span>
            </div>
            <div class="mt-4 pt-3 border-top">
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary"><i class="fas fa-edit me-2"></i>Edit Profile</button>
                    <button class="btn btn-outline-danger"><i class="fas fa-trash me-2"></i>Remove Student</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h5 class="mb-0">Personal Information</h5>
            </div>
            <div class="card-body p-4">
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Full Name:</div>
                    <div class="col-sm-8 fw-bold">@Model.Name</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Class:</div>
                    <div class="col-sm-8 fw-bold">@Model.Class</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Date of Birth:</div>
                    <div class="col-sm-8">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Gender:</div>
                    <div class="col-sm-8">@Model.Gender</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Email:</div>
                    <div class="col-sm-8 text-primary">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Phone:</div>
                    <div class="col-sm-8">@Model.Phone</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Residential Address:</div>
                    <div class="col-sm-8">@Model.Address</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h5 class="mb-0">Academic & Attendance Summary</h5>
            </div>
            <div class="card-body p-4">
                <div class="row text-center">
                    <div class="col-md-3">
                        <h4 class="text-primary">92%</h4>
                        <small class="text-muted">Attendance</small>
                    </div>
                    <div class="col-md-3 border-start">
                        <h4 class="text-success">A+</h4>
                        <small class="text-muted">Avg. Grade</small>
                    </div>
                    <div class="col-md-3 border-start">
                        <h4 class="text-info">15</h4>
                        <small class="text-muted">Courses</small>
                    </div>
                    <div class="col-md-3 border-start">
                        <h4 class="text-warning">3</h4>
                        <small class="text-muted">Upcoming Exams</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
