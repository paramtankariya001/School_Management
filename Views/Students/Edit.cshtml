@model Project.Models.Student
@{
    ViewData["Title"] = "Edit Student";
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Students</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Student</li>
            </ol>
        </nav>
        <h2>Edit Student: @Model.Name</h2>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Full Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Class" class="form-label">Class</label>
                    <select asp-for="Class" class="form-select">
                        <option value="10th A">10th A</option>
                        <option value="10th B">10th B</option>
                        <option value="9th A">9th A</option>
                        <option value="9th B">9th B</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="RollNo" class="form-label">Roll Number</label>
                    <input asp-for="RollNo" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <div class="mt-2">
                        <input type="radio" asp-for="Gender" value="Male" /> Male
                        <input type="radio" asp-for="Gender" value="Female" class="ms-3" /> Female
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary px-4"><i class="fas fa-save me-2"></i>Update Student</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
