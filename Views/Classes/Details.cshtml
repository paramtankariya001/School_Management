@model string
@{
    ViewData["Title"] = "Class Details - " + Model;
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Classes</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model Details</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <h2>@Model - Student List</h2>
            <button class="btn btn-primary"><i class="fas fa-print me-2"></i>Print Attendance Sheet</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card shadow-sm border-0 text-center p-3">
            <h3 class="text-primary mb-0">35</h3>
            <small class="text-muted">Total Students</small>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card shadow-sm border-0 text-center p-3">
            <h3 class="text-success mb-0">18</h3>
            <small class="text-muted">Boys</small>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card shadow-sm border-0 text-center p-3">
            <h3 class="text-danger mb-0">17</h3>
            <small class="text-muted">Girls</small>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card shadow-sm border-0 text-center p-3">
            <h3 class="text-info mb-0">95%</h3>
            <small class="text-muted">Avg. Attendance</small>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">Roll No</th>
                    <th>Student Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="ps-4">1</td>
                    <td><a href="/Students/Details/101" class="text-decoration-none">John Doe</a></td>
                    <td>john.doe@example.com</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td class="text-end pe-4">
                        <button class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></button>
                    </td>
                </tr>
                <tr>
                    <td class="ps-4">2</td>
                    <td><a href="/Students/Details/102" class="text-decoration-none">Jane Smith</a></td>
                    <td>jane.s@example.com</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td class="text-end pe-4">
                        <button class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
