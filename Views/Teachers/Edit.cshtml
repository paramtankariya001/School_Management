@model Project.Models.Teacher
@{
    ViewData["Title"] = "Edit Teacher";
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Teachers</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Teacher</li>
            </ol>
        </nav>
        <h2>Edit Teacher: @Model.Name</h2>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Full Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Subject" class="form-label">Subject</label>
                    <input asp-for="Subject" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Department" class="form-label">Department</label>
                    <select asp-for="Department" class="form-select">
                        <option value="Science">Science</option>
                        <option value="Humanities">Humanities</option>
                        <option value="Languages">Languages</option>
                        <option value="Arts">Arts</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Phone" class="form-label">Phone Number</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="JoiningDate" class="form-label">Joining Date</label>
                    <input asp-for="JoiningDate" type="date" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Qualification" class="form-label">Qualification</label>
                <input asp-for="Qualification" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary px-4"><i class="fas fa-save me-2"></i>Update Teacher</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
