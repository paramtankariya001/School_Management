@model IEnumerable<Project.Models.Teacher>
@{
    ViewData["Title"] = "Teachers";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h2>Teachers List</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Teacher</a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">ID</th>
                    <th>Name</th>
                    <th>Subject</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var teacher in Model)
                    {
                        <tr>
                            <td class="ps-4">@teacher.Id</td>
                            <td>@teacher.Name</td>
                            <td>@teacher.Subject</td>
                            <td>@teacher.Email</td>
                            <td>@teacher.Department</td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">No teacher records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
