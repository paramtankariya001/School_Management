@model Project.Models.Teacher
@{
    ViewData["Title"] = "Teacher Details";
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Teachers</a></li>
                <li class="breadcrumb-item active" aria-current="page">Teacher Details</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-center p-4 h-100">
            <div class="mb-4">
                <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px; font-size: 3rem;">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
            </div>
            <h4>@Model.Name</h4>
            <p class="text-muted">@Model.Subject Specialist</p>
            <div class="mt-3">
                <span class="badge bg-primary px-3 py-2">@Model.Department Department</span>
            </div>
            <div class="mt-4 pt-3 border-top">
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary"><i class="fas fa-edit me-2"></i>Edit Profile</button>
                    <button class="btn btn-outline-danger"><i class="fas fa-trash me-2"></i>Deactivate</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h5 class="mb-0">Professional Profile</h5>
            </div>
            <div class="card-body p-4">
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Designation:</div>
                    <div class="col-sm-8 fw-bold">Senior Faculty</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Qualification:</div>
                    <div class="col-sm-8 fw-bold">@Model.Qualification</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Joining Date:</div>
                    <div class="col-sm-8">@Model.JoiningDate.ToString("MMMM dd, yyyy")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Email:</div>
                    <div class="col-sm-8 text-primary">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Phone:</div>
                    <div class="col-sm-8">@Model.Phone</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Address:</div>
                    <div class="col-sm-8">@Model.Address</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h5 class="mb-0">Current Classes & Schedule</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Period</th>
                            <th>Class</th>
                            <th>Room</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-4">1</td>
                            <td>Class 10-A</td>
                            <td>Room 204</td>
                            <td>08:30 AM - 09:15 AM</td>
                        </tr>
                        <tr>
                            <td class="ps-4">2</td>
                            <td>Class 10-B</td>
                            <td>Room 205</td>
                            <td>09:15 AM - 10:00 AM</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
